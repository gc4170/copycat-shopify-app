<%- include('partials/head2.ejs', {sms: true}) %>

<h2>Copycat Popup Forms Preview</h2>

<div style="display: inline; margin-top: 10px;">
<button id="subscribe-btn">Start the popup journey</button>
</div>

<!-- start SUbscribe form--> 
<div class="overlay" id="ometria-modal">
  <a class="cancel" href="#"></a>
  <div class="modal">
 
 <div class="npopup-container">
  <form action="https://api.ometria.com/forms/signup" method="post">
    <input type="hidden" name="__form_id" value="914da260f9b6543487067473b43d6b03" />
    <input type="hidden" name="email" value="" autocomplete="off" />
    <div style="display:none !important">
      <input name="__email" type="email" value="" autocomplete="off" />
    </div>
    <input name="@account" type="hidden" value="f7af012b9a5822ff" />
    <input name="@return_url" type="hidden" value="" />
    <input name="@subscription_status" type="hidden" value="SUBSCRIBED" />
  
  
    <!-- Form elements go here: Style as you wish -->
    <center>
    <p class="npopup-title-text m-auto">Thank you for being part of the Copycat family</p>
   <p class="npopup-subtitle-text m-auto">Please take a moment to share a few details with us to enjoy 10% off your first purchase. You can also look forward to a special treat on your birthday &#x1F381;.</p>
   </center>

    <table style="width: 100%; margin-top: 20px;">
      <tr>
        <td>
          <p class="npopup-input-label">Email address</p>
          <input class="npopup-input" id="ue" name="ue" style="width: 100%; color: #fff;" type="text" value="" placeholder="e.g example@example.com"/>
          <p class="m-auto" style="color: red; margin-left: 30px; font-weight: bold; display: none;" id="sfe">Please fill in your email address</p>
        </td>
      </tr>
      <tr>
        <td>
          <p class="npopup-input-label" style="margin-top: 20px;">Phone number</p>
          <input class="npopup-input" id="phone_number" name="phone_number" style="color: #fff;" type="text" value="" placeholder="e.g 07911123456"/>
          <p style="color: red; font-weight: bold; margin-left: 30px; display: none;" id="sfp">Please fill in your phone number</p>
        </td>
      </tr>
      <tr>
        <td>
          <p class="npopup-input-label" style="margin-top: 20px;">DOB</p>
          <input class="npopup-input" id="date_of_birth" name="date_of_birth" type="date" value="" style="color: #888;"/>
        </td>
      </tr>
      <tr>
        <td>
          <input name="properties.sign_up_source" type="hidden" value="Subscription Form" />
        </td>
      </tr>
    </table>
    <input class="npopup-submit" type="submit" value="Submit" style="margin-top: 20px;" />
  
    <!-- End of form elements -->
  
  </form>
 </div>
</div>
 </div>
<%- include('partials/foot2.ejs') %>
